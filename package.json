{
  "name": "@backlineint/node-module-starter",
  "version": "0.0.0",
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid",
    "proseWrap": "always"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "eslint": "eslint --ext .js,.ts src --ignore-path .gitignore",
    "eslint:fix": "eslint --ext .js,.ts src --fix --ignore-path .gitignore",
    "prettier": "prettier \"**/*.{js,ts}\" --check --ignore-path .gitignore",
    "prettier:fix": "prettier \"**/*.{js,ts}\" --write --ignore-path .gitignore"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "2.3.2",
    "typescript": "^4.3.2",
    "vite": "^2.4.4"
  }
}
